<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.text.Text?>
<GridPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <ComboBox fx:id="music" GridPane.columnIndex="0" GridPane.rowIndex="0" />

    <Label fx:id="state" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
    <Label fx:id="nameField" text="Player Name: " GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
    <TextField fx:id="playerName" GridPane.columnIndex="2" GridPane.rowIndex="2" />

    <Button fx:id="playBtn" text="Play" onAction="#handleButtonAction" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
    <Button fx:id="scoreBtn" text="Score" onAction="#handleButtonAction" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
    <Button fx:id="leaveBtn" text="Leave" onAction="#handleButtonAction" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" />

    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</GridPane>
